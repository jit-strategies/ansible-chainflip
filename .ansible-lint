---
# More details: https://ansible-lint.readthedocs.io/configuring/
exclude_paths:
  - .cache/
  - .github/
  - .git/
  - .tox/
  - '*/secrets.enc.y*ml'
  - '*/secrets.y*ml'
  - '*/docker-compose.y*ml'
  - '.sops.y*ml'
  - '**/molecule/*'
  - '**/__pycache__/*'
  - '**/.yamllint'
  - '**/test.ym*l'
skip_list:
  - no-changed-when
  - no-handler
  - yaml[line-length]
  - galaxy[no-changelog]
  - schema[meta]
  - var-naming
  - package-latest
